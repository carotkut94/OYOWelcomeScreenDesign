<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    tools:context="com.death.designtocode3.MainActivity">

    <LinearLayout
        android:id="@+id/logo"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/oyo_logo_white"
            android:scaleY="0.35"
            android:scaleX="0.35"
            android:layout_width="match_parent"
            android:layout_height="160sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_above="@+id/offer"
        android:layout_below="@+id/logo"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_wifi_black_24dp"
            android:fontFamily="@font/amiko"
            android:padding="16sp"
            android:textSize="16sp"
            android:drawableBottom="@drawable/bottom_drawable"
            android:text="  Free Wi-Fi"
            android:textColor="#fff"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ac_vector"
            android:fontFamily="@font/amiko"
            android:padding="16sp"
            android:textSize="16sp"
            android:text="  AC Rooms"
            android:textColor="#fff" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/breakfast"
            android:fontFamily="@font/amiko"
            android:padding="16sp"
            android:textSize="16sp"
            android:text="  Breakfast Included"
            android:textColor="#fff"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_payment_black_24dp"
            android:fontFamily="@font/amiko"
            android:padding="16sp"
            android:textSize="16sp"
            android:text="  Book Now Pay Later"
            android:textColor="#fff"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/clean_rooms"
            android:fontFamily="@font/amiko"
            android:padding="16sp"
            android:textSize="16sp"
            android:text="  Clean and Hygienic Rooms"
            android:textColor="#fff"/>
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/amiko"
        android:text="  Get RS 500 OYO money on sign up"
        android:textColor="#fff"
        android:id="@+id/offer"
        android:layout_marginBottom="8dp"
        android:layout_above="@+id/nextbutton"
        android:layout_centerHorizontal="true"
        android:textSize="16sp" />

    <Button
        android:background="@drawable/button_rounded"
        android:id="@+id/nextbutton"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="38dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:paddingLeft="36dp"
        android:paddingRight="36dp"
        android:text="GET STARTED"
        android:textStyle="bold"
        android:drawableEnd="@drawable/ic_arrow_forward_black_24dp"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="@font/amiko"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>
